<Page
    x:Class="WorkShop10.Pivot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkShop10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot Title="Pivot Test Template">
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="36" Foreground="Gray"/>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <PivotItem Header="Module 1">
                <StackPanel>
                    <TextBlock Text="Module Item 1" />
                    <TextBlock Text="Module Item 2" />
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Second">
                <TextBlock Text="Fantastic" />
            </PivotItem>
            <PivotItem Header="Third" Foreground="Blue">
                <TextBlock Text="Awesome" />
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
